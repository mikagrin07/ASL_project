<body>
    <h1>Upload an Image</h1>
    <form id="uploadForm" enctype="multipart/form-data">
        <input type="file" id="fileInput" name="file" accept="image/*">
        <input type="submit" value="Upload">
    </form>
    <p id="output"></p>
    <img id="uploadedImage" src="#" alt="Uploaded Image" style="display: none;">
    <p id="dimensions"></p>

    <script>
        document.getElementById('uploadForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent form from submitting
            var formData = new FormData();
            var fileInput = document.getElementById('fileInput');
            if (fileInput.files.length > 0) {
                formData.append('file', fileInput.files[0]);
            } else {
                document.getElementById('output').innerText = 'Error: No file selected';
                return;
            }

            fetch('/upload', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        document.getElementById('output').innerText = 'Error: ' + data.error;
                    } else {
                        document.getElementById('output').innerText = 'Image uploaded successfully!';
                        var uploadedImage = document.getElementById('uploadedImage');
        uploadedImage.src = data.url;
	qff
                        uploadedImage.style.display = 'block';
                        document.getElementById('dimensions').innerText = 'Width: ' + data.width + ', Height: ' + data.height + ', Prediction: ' + data.predict;
                    }
                })
                .catch(error => console.error('Error:', error));
        });
    </script>
</body>
